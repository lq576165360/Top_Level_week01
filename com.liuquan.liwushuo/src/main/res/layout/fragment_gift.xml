<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.liuquan.liwushuo.fragment.viewpager.fragment.GiftFragment">


    <TextView
        android:clickable="true"
        android:id="@+id/gift_fragment_toptv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/gift_category_guide"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_chevron_dark"
        android:padding="10dp"
        android:text="选礼神器" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:scrollbarSize="@null"
            android:divider="@null"
            android:id="@+id/gift_fragment_listview"
            android:background="#ffffff"
            android:layout_width="0dp"
            android:scrollbars="none"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ExpandableListView
            android:divider="@null"
            android:groupIndicator="@null"
            android:id="@+id/gift_fragment_expandlistview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
    </LinearLayout>
</LinearLayout>
