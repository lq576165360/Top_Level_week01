<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/hot2_comment_user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher"
        app:riv_corner_radius="30dip" />
    <TextView
        android:textSize="15sp"
        android:id="@+id/hot2_comment_username_tv"
        android:text="aaaaaa"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/hot2_comment_user_icon"
        android:layout_alignTop="@+id/hot2_comment_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/hot2_comment_des_tv"
        android:lines="2"
        android:ellipsize="marquee"
        android:layout_toRightOf="@+id/hot2_comment_user_icon"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/hot2_comment_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bbbbbbbbbbbbb"/>
    <View
        android:layout_marginLeft="70dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:background="#aaaaaa"
        android:layout_height="1dp"
        android:layout_below="@+id/hot2_comment_user_icon"/>
</RelativeLayout>